<div class="card m-5">
    <div class="card-header">
        <h5 class="card-title">Registro de Empresa</h5>
    </div>
    <div class="card-body">
        <form action="/empresa" method="post">
            <div class="row">
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text"  name="nit" class="form-control" placeholder="Nit" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="rsocial" class="form-control" placeholder="R.social" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" class="form-control" placeholder="Direccion">
                    </div>
                    <div class="form-group">
                        <input type="text" name="habilitacion" class="form-control" placeholder="Habilitacion" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="resolucion" class="form-control" placeholder="Resolcion" required>
                    </div>
                    <div class="form-group">
                        <input type="text"  name="tresolucion" class="form-control" placeholder="Texto Resolcion">
                    </div>
                    <div class="form-group">
                        <input type="text" name="telefono" class="form-control" placeholder="Telefono">
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="@Email">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-sm btn-block">INGRESAR</button>
                    </div>
                    
                </div>
            </div>
        </form>
    </div>
</div>