<div class="container m-4">
    <form action="/medicamentos" method="POST">
        <div class="row">
            <div class="col-sm-10">
                <span><b>Medicamento</b></span>
                <input type="text" id="medicamento" name="medicamento" class="form-control form-control-sm"
                    placeholder="Nombre Medicamento">
            </div>
            <div class="col-sm-2 mt-4">
                <button class="btn btn-primary btn-sm"><b>+</b></button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-10 mt-2">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Medicamentos</th>
                        <th scope="col">Accion</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each valores}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{data.medicamento}}</td>
                        <td><a href="/delmedicamento/{{id}}" class="btn btn-danger btn-sm"><i class='fas fa-trash-alt' style='font-size:15px'></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>