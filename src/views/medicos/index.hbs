
<div class="row mt-4">
    <div class="col-sm-10" style="margin-left: 10%;">
       <div id="alert"></div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-titel">Registro de Medicos</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Cedula Medicos</b></span>
                            <input type="text" class="form-control form-control-sm" id="cedula" name="cedula"
                                onblur=" blurMedicoCedula()" placeholder="Cedula" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Nombres</b></span>
                            <input type="text" class="form-control form-control-sm" id="nombre" name="nombres"
                                placeholder="Nombres" required>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Registro medicos</b></span>
                            <input type="text" class="form-control form-control-sm" id="registro" name="registro"
                                placeholder="Registro Medicos" required>
                        </div>

                    </div>
                    {{!-- col --}}
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Especialidad</b></span>
                            <select name="especialidad" id="especialidad" class="form-control form-control-sm">
                                <option value="">Seleccione</option>
                                <option value="odontologo">Odontologo</option>
                                <option value="otorrino">Otologia</option>
                                <option value="otorrino">Laringologia</option>
                            </select>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Telefono</b></span>
                            <input type="text" class="form-control form-control-sm" id="telefono" name="telefono"
                                placeholder="Telfonos" required>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="small"><b>Email</b></span>
                            <input type="text" class="form-control form-control-sm" id="email" name="email"
                                placeholder="email" required>
                        </div>
                        <input type="hidden" id="id" name="id">

                    </div>
                </div>
                <div class="row border p-3 m-1">
                    <div class="col-sm-3">
                        <select name="dia" id="dia" class="form-control form-control-sm">
                            <option value="lunes">Lunes</option>
                            <option value="martes">Martes</option>
                            <option value="miercoles">Miercoles</option>
                            <option value="jueves">Jueves</option>
                            <option value="viernes">Vieres</option>
                            <option value="sabado">Sabado</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <input type="time" name="hi" id="hi" class="form-control form-control-sm small">
                    </div>
                    <div class="col-sm-2">
                        <input type="time" name="hf" id="hf" class="form-control form-control-sm small">
                    </div>
                    <div class="col-sm-2">
                        <input type="number" name="duracion" id="duracion" placeholder="duracion" class="form-control form-control-sm small">
                    </div>
                    <div class="col-sm-3">
                        <button class="btn btn-success btn-sm" onclick="agregarHorario()"> Agregar</button>
                    </div>
                </div>
                <div class="row p-3 m-1">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Dia</th>
                                <th scope="col">Desde</th>
                                <th scope="col">Hasta</th>                                
                                <th scope="col">Accion</th>                                
                            </tr>
                        </thead>
                        <tbody id="agenda">
                         
                          
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <button id="ingresar" class="btn btn-primary btn-block"
                                onclick="agregarMedico()">Ingresar</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button onclick="actualizarMedico()" id="actualizar" class="btn btn-warning btn-block"
                style="visibility: hidden;">Actualizar</button>
        </div>
    </div>

</div>