<style>
    .modal-lg {
       max-width: 80%;
}
</style>
<div class="row m-4">
    <div class="col-sm-10"></div>
    <div class="col-sm-2">

        <a href="/verhc/{{cita.paciente.cedula}}" class="btn btn-warning btn-sm"><i class="fas fa-reply"
                style="font-size: 20px;"></i></a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        PROCEDIMIENTOS
    </div>
    <div class="card-body">
        {{#each ordenes}}
        <div class="row m-2 border">
            <div class="col-sm-11">{{orden}}</div>
            <div class="col-sm-1"><button type="button" class="btn btn-primary btn-sm" onclick="pr('{{orden}}')" data-toggle="modal"
                    data-target="#exampleModalScrollable">
                    ver
                </button>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">                
                <a href="#" class="btn btn-primary btn-sm mr-4" onclick="ImprimirHc()"><i class="fas fa-print"
                                style="font-size: 20px;"></i></a>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                </style>


               

                <div class="container m-4 p-3 border" id="imp">
                    <div class="row mb-3">
                        <div class="col-sm-4"><img src="/img/logoOrl.png" width="150"></div>
                        <div class="col-sm-8 pt-5 pl-5">
                            <h3><b> ORDENES</b></h3>
                        </div>
                    </div>
                    <div class="border">
                        <div class="row">
                            <div class="col-sm-3"><b>Nombre:</b> {{cita.paciente.nombre}} {{cita.paciente.snombre}}
                                {{cita.paciente.apellido}} {{cita.paciente.sapellido}}</div>
                            <div class="col-sm-3"><b>Cedula:</b> {{cita.paciente.cedula}}</div>
                            <div class="col-sm-3"><b>Ciudad:</b> Cartagena</div>
                            <div class="col-sm-3"><b>Fecha:</b> {{hc.fecha}}</div>
                        </div>


                    </div>
                    <div class="div border mt-2 pl-5">
                        <div class="row mb-3">
                            <div class="col.sm-12" id="pr">
                             ...
                            </div>
                        </div>
                    </div>
                    <div class="border mt-2 p-4">

                        <div class="row">
                            <div class="col-sm-4 padre" style="padding-top: 10px;">
                                <img src="/img/firmas/{{medico.cedula}}.png" class="m-0 p-0 hijo" width="140">
                                <hr class="m-0 p-0">
                                <b class="mt-0 mr-4">{{medico.nombres}}</b><br>
                                <b class="mt-0 mr-4">{{medico.especialidad}}</b><br>
                                <b class="mt-0 mr-4">RM:{{medico.registro}}</b><br>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary btn-sm" onclick="ImprimirHc()"><i class="fas fa-print"
                                style="font-size: 20px;"></i></a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
