<div class="card m-5" style="width: 70%;">
    <div id="alert"></div>
    <div class="card-header">
        <h4 class="card-title">Creacion de Rips</h4>
    </div>
    <div class="card-body">
        <form action="/ripscrear" method="POST">
            <div class="row">
                <div class="col-sm-3">
                     <span class="small"><b>Inicio</b></span>
                    <select name="entidad" id="entidad" onclick="tipoFacturarips();" class="form-control form-control-sm">
                        <option value="">.::Seleccionar::.</option>
                        {{#each entidad}}
                        <option value="{{nit}}">{{rsocial}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <span class="small"><b>Inicio</b></span>
                        <input type="date" class="form-control form-control-sm" id="finicio" name="finicio">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <span class="small"><b>Final</b></span>
                        <input type="date" class="form-control form-control-sm" id="ffinal" name="ffinal">
                    </div>
                </div>
                <div class="col-sm-3 pl-0 mr-0">
                    <span class="small"><b>..</b></span>
                    <div id="ripboton"></div>                  
                </div>
                <button class="btn btn-success btn-sm">Crear Rips</button>

            </div>


        </form>
    </div>
</div>
