<style>
    #padre {
        position: relative;

    }

    #hijo {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        margin: 0;
        width: 20px;
    }
</style>

<div class="row m-4">
    <div class="col-sm-10"></div>
    <div class="col-sm-2">
        <a href="#" class="btn btn-primary btn-sm" onclick="ImprimirHc()"><i class="fas fa-print"
                style="font-size: 20px;"></i></a>
        <a href="/facturas" class="btn btn-warning btn-sm"><i class="fas fa-reply" style="font-size: 20px;"></i></a>
        <a href="/anexo/{{f.codigo}}" class="btn btn-success btn-sm"><i class="fas fa-clipboard-list"
                style="font-size: 20px;"></i></a>
        </a>
    </div>
</div>

<div class="container m-5 p-3 border" id="imp" style="width: 80%;">
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-4 p-3">

                    <div class="card-body">
                        <img src="/img/logo.png" alt="" width="180">
                    </div>

                </div>
                <div class="col-sm-8 p-2">
                    <h3 class="pl-5 ml-5">.::FACTURA::.</h3>
                    <div class="card">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <b>{{e.rsocial}}</b> <br>
                            <b>Nit:</b> {{e.nit}} <br>
                            <b>Direccion:</b> {{e.direccion}}<br>
                            <b>Telefono:</b> {{e.telefono}}<br>
                            <b>email:</b> {{e.email}}<br>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-4 mt-5 p-1">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body p-0 pl-5">
                    <h5 style="color: red;"><b>Nro. OR-{{f.codigo}}</b></h5>
                </div>
            </div>
            <div class="card mt-1">
                <div class="card-header"><b class="card-title">Fecha</b></div>
                <div class="card-body  p-0 pl-4" style="color: blue; font-size: 20px;">
                    <b>::{{f.fecha}}::</b>
                </div>
            </div>



        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <b>NOMBRE: </b> {{f.hc.entidad.rsocial}}<br>
                            <b>DIRECCION: </b>{{f.hc.entidad.direccion}} <br>
                            <b>TELEFONO: </b> {{f.hc.entidad.telefono}}<br>
                        </div>
                        <div class="col-sm-6">
                            <b>NIT: </b> {{f.hc.entidad.nit}}<br>
                            <b>TC: </b>{{f.hc.entidad.tfacturacion}} <br>
                            <b>email: </b> {{f.hc.entidad.email}}<br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body small">


                    {{#if f.hc.anexo}}
                    <div class="row">
                        <div class="col-sm-9"><b>ITEM</b></div>                    
                        <div class="col-sm-3"><b>VALOR</b></div>
                    </div>
                    {{#each f.hc.anexo}}
                    <div class="row">                       
                        <div class="col-sm-9">{{cups}}</div>
                        <div class="col-sm-3">$ {{total}}</div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="row">
                        <div class="col-sm-6"><b>ITEM</b></div>
                        <div class="col-sm-2"><b>CEDULA</b></div>
                        <div class="col-sm-2"><b>PACIENTE</b></div>
                        <div class="col-sm-2"><b>VALOR</b></div>
                    </div>
                    {{#each fac}}
                    <div class="row">
                        <div class="col-sm-6">{{hc.item.cups}} {{hc.item.nombre}}</div>
                        <div class="col-sm-2">{{hc.paciente.cedula}}</div>
                        <div class="col-sm-2">{{hc.nombres}}</div>
                        <div class="col-sm-2">$ {{hc.valor}}</div>
                    </div>
                    {{/each}}
                    {{/if}}

                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">

                </div>
            </div>
        </div>
        <div class="col-sm-6 small">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-5"><b>SUBTOTAL</b></div>
                        {{#if f.hc.anexo}}
                        <div class="col-sm-4">$ {{f.hc.total}}</div>
                        {{else}}
                        <div class="col-sm-4">$ {{total}}</div>
                        {{/if}}
                    </div>
                    <div class="row">
                        <div class="col-sm-5"><b>% IVA</b></div>
                        <div class="col-sm-4">$ 0</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5"><b>TOTAL</b></div>
                       {{#if f.hc.anexo}}
                        <div class="col-sm-4">$ {{f.hc.total}}</div>
                        {{else}}
                        <div class="col-sm-4">$ {{total}}</div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 padre">
            <img src="/img/firmas/1047384229.png" class="m-0 p-0 hijo" width="180">
            _____________________________________________ <br>
            <b>{{user.nombre}}</b><br>
            <b>{{user.medico}}</b>

        </div>
    </div>
</div>