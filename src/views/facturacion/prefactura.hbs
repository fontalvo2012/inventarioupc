<div class="container">
    <div id="alert"></div>
    <h5><b>.::Prefacturacion::.</b></h5>
    <div class="row">
        <div class="col-sm-2">
            <span class="small"><b>Entidades</b></span>
            <select name="entidad" id="entidad" onchange="tipoFactura()" class="form-control form-control-sm">
                <option value="">.::Seleccionar::.</option>
                {{#each entidades}}
                <option value="{{nit}}">{{rsocial}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-sm-2">
            <span class="small"><b>Inicial</b></span>
            <input type="date" id="ini" name="ini" class="form-control form-control-sm">
        </div>
        <div class="col-sm-2">
            <span class="small"><b>Final</b></span>
            <input type="date" id="fin" name="fin" class="form-control form-control-sm">
        </div>
        <div class="col-sm-2 mt-4">
            <div class="row">
                <div class="col-sm-3"><button class="btn btn-success btn-sm" onclick="consultarPrefactura('nombres')"><i
                            class='fas fa-search' style='font-size:12px'></i> </button></div>
                <div class="col-sm-3"> <button class="btn btn-warning btn-sm" onclick="facturarxid()">Facturar</button>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <span class="small"><b>Fecha Facturacion</b></span>
                <input type="date" id="fechaf" name="fechaf" value="{{f}}" class="form-control form-control-sm">
            </div>
        </div>
    </div>
</div>

<table class="table table-bg small">
    <thead>
        <tr>                        
            <th scope="col" onclick="QuitarTOdo()">#</th>                        
            <th scope="col" onclick="consultarPrefactura('nro')">Admision</th>
            <th scope="col">Periodo</th>
            <th scope="col" onclick="consultarPrefactura('nombres')">Paciente</th>
            <th scope="col">Entidad</th>
            <th scope="col" onclick="consultarPrefactura('cups')">Cups</th>
            <th scope="col" onclick="consultarPrefactura('item')">Item</th>
            <th scope="col" onclick="consultarPrefactura('autorizacion')">Autorizacion</th>
            <th scope="col" onclick="consultarPrefactura('copago')">copago</th>
            <th scope="col" onclick="consultarPrefactura('valor')">Valor</th>
            <th scope="col" onclick="consultarPrefactura('total')">total</th>
            <th scope="col">Acciones</th>

        </tr>
    </thead>
    <tbody id="prefacturas">

    </tbody>
</table>
