                <th scope="col">Entidad</th>
                <th scope="col">Paciente</th>
                <th scope="col">Valor</th>
                <th>Acciones</th>

            </tr>
        </thead>
        <tbody id="res">
            {{#each valores}}
            <tr>
                <th scope="row">{{prefijo}}{{consecutivo}}</th>
                <td>{{eps.rsocial}}</td>
                <td>{{fecha}}</td>
                <td>{{paciente.nombre}} {{paciente.apellido}} {{paciente.sapellido}}</td>
                <td>${{total}}</td>
                <td><button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#facturaprint">ver</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>



