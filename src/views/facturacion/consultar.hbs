<div class="row">
    <div class="col-sm-2 ">
        <div class="form-group">
            <span class="small"><b>Fecha inicial</b></span>
            <input type="date" class="form-control form-control-sm" name="ini" id="ini">
        </div>
    </div>
    <div class="col-sm-2 ">
        <div class="form-group">
            <span class="small"><b>Fecha Final</b></span>
            <input type="date" class="form-control form-control-sm" name="fin" id="fin">
        </div>
    </div>
