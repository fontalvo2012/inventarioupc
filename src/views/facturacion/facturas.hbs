<div class="container m-4">
    <h5><b>.::Facturacion::.</b></h5>
    <form action="" method="post">
            <div class="row">
        <div class="col-sm-3">
            <span class="small"><b>Entidades</b></span>
            <select name="entidad" id="entidad" class="form-control form-control-sm">
                <option value="">.::Seleccionar::.</option>
                {{#each entidades}}
                    <option value="{{nit}}">{{rsocial}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-sm-2">
            <span class="small"><b>Inicial</b></span>
            <input type="date" id="ini" name="ini" class="form-control form-control-sm">
        </div>
          <div class="col-sm-2">
            <span class="small"><b>Final</b></span>
            <input type="date" id="fin" name="fin" class="form-control form-control-sm">
        </div>
        <div class="col-sm-2 mt-4">
            <button class="btn btn-success btn-sm">Buscar</button>
        </div>
    </div>
    </form>
    <div class="row mt-3">
        <div class="col-sm-12">
            <table class="table small">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Periodo</th>
      <th scope="col">Paciente</th>
      <th scope="col">Entidad</th>
      <th scope="col">Item</th>
      <th scope="col">Valor</th>

      <th scope="col">Acciones</th>

    </tr>
  </thead>
  <tbody>
      {{#each prefacturas}}
    <tr>
      <th scope="row">{{data.prefijo}}{{data.consecutivo}}</th>
      <td>{{data.pinicio}}</td>
      <td>{{data.paciente.nombre}} {{data.paciente.snombre}} {{data.paciente.apellido}} {{data.paciente.sapellido}}</td>
      <td>{{data.eps.rsocial}}</td>
      <td>{{data.item.nombre}}</td>
      <td>$ {{data.item.valor}}</td>
      <td>         
          <a href="/imprimirfac/{{id}}" class="btn btn-primary btn-sm"><i class="fas fa-print" style="font-size: 16px;"></i></a>
          {{#if data.anexo}}
          <a href="/anexo/{{id}}" class="btn btn-warning btn-sm"><i class="fas fa-clipboard-list" style="font-size: 16px;"></i></a>
          {{/if}}
      </td>

    </tr>
        {{/each}}
  </tbody>
</table>
        </div>
    </div>
</div>