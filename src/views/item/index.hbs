<div class="row">
    <div class="col-sm-8">
        {{#each error}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Mensaje:</strong> {{mensaje}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/each}}
        <form action="/addItem" method="POST">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-titel"> Items</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="small"><b>Cups</b></span>
                                <input type="text" class="form-control form-control-sm" onblur="selectEntidad()"
                                    id="cups" name="cups" placeholder="Cups" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="small"><b>Nombres</b></span>
                                <input type="text" class="form-control form-control-sm" id="nombre" name="nombre"
                                    placeholder="Nombre" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <span class="small"><b>Entidad</b></span>
                                <div class="entidades">
                                    <select name="" id="" class="form-control form-control-sm">
                                        <option value="">::Entidad::</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <span class="small"><b>Valor</b></span>
                                <input type="number" class="form-control form-control-sm" id="valor" name="valor"
                                    placeholder="Registro Medicos" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <span class="small"> <b>Copago</b></span>
                                <input type="number" name="copago" id="copago" placeholder="Copago"
                                    class="form-control form-control-sm">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="small"><b>Atencion </b> <b style="color: blue;">*Procedimiento</b></span>
                                <select name="atiende" id="atiende" class="form-control form-control-sm">
                                    <option value="1">Medico(a) Especialista</option>
                                    <option value="2">Medico(a) General</option>
                                    <option value="3">Enfermera (o)</option>
                                    <option value="4">Auxiliar Enfermeria</option>
                                    <option value="5">Otro</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <span class="small"><b>D.Principal</b></span>
                                <input type="text" name="dprincipal" id="dprincipal" placeholder="Codigo"
                                    class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <span class="small"><b>Tipo</b></span>
                                <select name="tipo" id="tipo" class="form-control form-control-sm">
                                    <option value="c">Consulta</option>
                                    <option value="p">Procedimiento</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="small"><b>Acto quirúrgico </b> <b
                                        style="color: blue;">*Procedimiento</b></span>
                                <select name="a_quirurgico" id="a_quirurgico" class="form-control form-control-sm">
                                    <option value="">Ninguno</option>
                                    <option value="1">Único o unilateral</option>
                                    <option value="2">Múltiple o bilateral,misma vía, diferente especialidad</option>
                                    <option value="3">Múltiple o bilateral,misma vía, igual especialidad</option>
                                    <option value="4">Múltiple o bilateral,diferente vía, diferente especialidad
                                    </option>
                                    <option value="5">Múltiple o bilateral,diferente vía, igual especialidad</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <span class="small"><b>Complicacion</b><b style="color: blue;">*Procedimiento</b></span>
                                <input type="text" name="complicacion" id="complicacion"
                                    class="form-control form-control-sm" placeholder="codigo">
                            </div>
                        </div>

                    </div>
                    <input type="hidden" id="id" name="id">
                    <div class="form-group">
                        <button id="ingresar" class="btn btn-primary btn-block">Ingresar</button>

                    </div>
                </div>
            </div>
        </form>

    </div>
</div>