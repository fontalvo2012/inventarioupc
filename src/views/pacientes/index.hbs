<div class="row">
    <div class="col-sm-6">
        <form action="/addpacientes" method="POST">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-titel"> Pacientes</h3>
                </div>
                <div class="card-body">
                    
                    <div class="form-group">
                        <span class="small"><b>Cedula pacientes</b></span>
                        <input type="text" class="form-control form-control-sm" id="cedula" name="cedula" onblur=" blurpacienteCedula()"  placeholder="Cedula" required>
                    </div>
                    <div class="form-group">
                        <span class="small"><b>Nombres</b></span>
                        <div class="row m-2">
                            <div class="col m-0 p-1"><input type="text" class="form-control form-control-sm" id="nombre" name="nombre" placeholder="Nombre" required></div>
                            <div class="col m-0 p-1"><input type="text" class="form-control form-control-sm" id="snombre" name="snombre" placeholder="2do Nombre" required></div>
                            <div class="col m-0 p-1"><input type="text" class="form-control form-control-sm" id="apellido" name="apellido" placeholder="Apellido" required></div>
                            <div class="col m-0 p-1"><input type="text" class="form-control form-control-sm" id="sapellido" name="sapellido" placeholder="2do Apellido" required></div>

                        </div>
                    </div>
                    <div class="form-group">
                        <span class="small"><b>direccion pacientes</b></span>
                        <input type="text" class="form-control form-control-sm" id="direccion" name="direccion"
                            placeholder="direccion pacientes" required>
                    </div>
                    <div class="form-group">
                        <span class="small"><b>Telefono</b></span>
                        <input type="text" class="form-control form-control-sm" id="telefono" name="telefono" placeholder="Telfonos" required>
                    </div>
                    <div class="form-group">
                        <span class="small"><b>Email</b></span>
                        <input type="text" class="form-control form-control-sm" id="email" name="email" placeholder="email" required>
                    </div>
                    <input type="hidden" id="id" name="id"> 
                    <div class="form-group">
                        <button id="ingresar" class="btn btn-primary btn-block">Ingresar</button>
                        
                    </div>
                </div>
            </div>
        </form>
        <div class="form-group">
            <button  onclick="actualizarpaciente()" id="actualizar" class="btn btn-warning btn-block" style="visibility: hidden;">Actualizar</button>
        </div>
    </div>
    <div class="col-sm-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Cedula</th>
                    <th scope="col" >Nombres</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">R.paciente</th>
                    <th> Acciones </th>
                  
                </tr>
            </thead>
            <tbody>
                {{#if valores}}
                    {{#each valores}}
                    <tr>
                    <th scope="row" class="small">{{cedula}}</th>
                    <td class="small">{{nombre}} {{apellido}} {{sapellido}}</td>
                    <td class="small">{{telefono}}</td>
                    <td class="small">{{direccion}}</td> 
                    <td>
                        <a href="/delpaciente/{{id}}" class="btn btn-danger btn-sm" >del</a>
                        {{!-- <button class="btn btn-success btn-sm" onclick="consultarpaciente({{cedula}});">mod</button> --}}
                    </td>                
                    </tr>
                    {{/each}}

                {{else}}
                 <tr>
                    <th scope="row" colspan="4">No hay  Registro de  paciente</th>                    
                </tr>
                {{/if}}


            </tbody>
        </table>

    </div>
</div>

