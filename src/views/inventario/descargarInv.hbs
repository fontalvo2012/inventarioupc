<div class="container">
  <div class="card">
  <div class="card-header">
    <h4>Descargar Inventario {{user.empleado}}</h4>
  </div>
  <input type="hidden" value="{{user.empleado}}" id="emp">
  <div class="card-body">
    <form action="/descargarinv" method="post" id="descargaCcostos">
    <div class="row">
      <div class="col-5">
        <span>Centro de Costos</span>
        <select name="ccostos" id="ccostos" class="form-control form-control-sm" required>
          <option value="">Seleccionar</option>
          {{#each ccostos}}
          <option value="{{_id}}">{{nombre}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-5">
        <span>Materiales</span>
        <select  id="materiales" class="form-control form-control-sm" onchange="cantidadInv()" required>
          <option value="">Seleccione</option>
          {{#each invent}}
          <option value="{{cantidad}}" data-cd="{{codigo}}" data-empleado="{{user.empleado}}">{{producto}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-2" id="cantidadInv">
        <span>Cantidad</span>
        <input type="text" class="form-control form-control-sm" disabled placeholder="Cantidad">
      </div>
    </div>
    <div class="col-sm-12 mt-4 mb-4">
      <span class="btn btn-info btn-sm btn-block" onclick="cargarlistadescargas() "> Agregar a Centro de costo</span>
    </div>
    <div class="col-12" id="listaItems"></div>
    <div class="col-sm-12">
      <span class="btn btn-success btn-block btn-sm" onclick="guardarItemCentros()"> Guardar</span>
    </div>
    </form>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
   <h3> Inventario</h3>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Producto</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      <tbody>
        {{#each invent}}
          <tr>
            <td>{{codigo}}</td>
            <td>{{producto}}</td>
            <td>{{cantidad}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
</div>