<div class="card">
    <div class="card-header">
        <h4>pedidos solicitados</h4>
    </div>
<div class="card-body">
  <table class="table dtable">
          <thead>
            <tr>
              <th>Nro</th>
              <th>Fecha</th>
              <th>Observacion</th>
              <th>Empreado</th>
              <th>Accion</th>
            </tr>
          </thead>
          <tbody >
             {{#each pedido}}
            <tr>
              <td>{{nro}}</td>
              <td>{{fecha}}</td>
              <td>{{observacion}}</td>
              <td>{{usuario}}</td>
              <td><a href="/verPedidoSedes/{{_id}}">ver</a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
   
    
</div>
</div>