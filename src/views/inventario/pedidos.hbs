<form action="/pedidos" method="POST">
  <input type="hidden" id="pedido" name="pedido" required>


  <div class="card mb-1">
    <div class="card-header">
      <div class="col-12">
        <input type="text" class="form-control-sm form-control" id="rfid">
      </div>
    </div>
    <div class="card-body">

      <div class="container">
        <h4>Datos del Empleado</h4>
        <div class="row">
          <div class="col-sm-3 align-items-start">
            <div class="form-group">
              <img src="/img/ramiro.jpeg" alt="Foto de la persona" class="img-thumbnail" width="200">
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <label><b>Nombre:</b></label>
              <input type="text" class="form-control form-control-sm" id="nombres" name="nombres" placeholder="Nombres">
            </div>
            <div class="form-group">
              <label><b>CÃ©dula:</b></label>
              <input type="text" class="form-control form-control-sm" id="cedula" name="cedula" placeholder="Cedula">
            </div>
            <div class="form-group">
              <label><b>Cargo:</b></label>
              <p class="form-control-static" id="cargo"></p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="card">
              <div class="card-header">
                <h4>Crear Pedido</h4>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-12">
                    <span class="small"><b>Seleccione Supervisor</b></span>
                    <select name="supervisor" id="supervisor" class="form-control form-control-sm" required>
                      <option value="">Supervisor</option>
                      {{#each cordinadores}}
                      <option value="{{medico}}">{{empleado}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="col-sm-12">
                    <span class="small"><b>Producto</b></span>
                    <input type="text" id="producto" name="producto" placeholder="Producto" onblur="ValidarProducto()"
                      class="form-control form-control-sm productos">
                  </div>
                  <div class="col-sm-6">
                    <span class="small"><b>Cantidad</b></span>
                    <input type="text" id="cantidad" name="cantidad" placeholder="#"
                      class="form-control form-control-sm">
                  </div>
                  <div class="col-sm-6 mt-4"><a href="#" class="btn btn-info btn-sm" onclick="verificarProducto()"><i
                        class='fas fa-angle-double-down' style='font-size:16px'></i> Agregar a la lista</a></div>
                  <div class="col-sm-12"><span class="small"><b>Observacion</b></span><textarea name="observacion"
                      id="observacion" cols="30" rows="1" class="form-control form-control-sm"
                      placeholder="Observacion"></textarea></div>
                  <div class="col-sm-12 mt-4"><button class="btn btn-success btn-block btn-sm">Crear Pedido</button></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</form>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Producto</th>
              <th scope="col">Cantidad</th>
              <th scope="col">accion</th>
            </tr>
          </thead>
          <tbody id="contenido">
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-sm-6">

    <div class="card">
      <div class="card-header">
        <h3> Inventario</h3>
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Codigo</th>
              <th>Producto</th>
              <th>Cantidad</th>
            </tr>
          </thead>
          <tbody>
            {{#each invfinal}}
            <tr>
              <td>{{codigo}}</td>
              <td>{{producto}}</td>
              <td>{{cantidad}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>