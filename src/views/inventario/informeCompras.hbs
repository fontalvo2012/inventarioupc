<h4>compras</h4>

<div class="container">
   <table class="table dtable">
          <thead>
            <tr>
              <th>codigo</th>
              <th>fecha</th>
              <th>nit</th>
              <th>proveedor</th>
              <th>Soporte</th>
              <th>Items</th>
            </tr>
          </thead>
          <tbody id="infcompras">
            {{#each compras}}
              <tr>
                <th>{{nro}}</th>
                <th>{{fecha}}</th>
                <th>{{proveedor}}</th>
                <th>{{nproveedor}}</th>
                <th><button type="button" class="btn btn-primary" data-toggle="modal"  onclick="cargarPdfFactutas('{{imagen}}')" data-target="#imgFacturas">Ver Soporte</button></th>
                <th><button type="button" class="btn btn-primary" data-toggle="modal" onclick="cargarProductos('{{productos}}')" data-target="#ListaProductos">Ver Productos</button></th>
              </tr>
           {{/each}}
          </tbody>
        </table>
</div>


{{!-- MODAL SOPORTE FACTURAS --}}
<!-- Modal -->
<div class="modal fade" id="imgFacturas" tabindex="-1" aria-labelledby="imgFacturasLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imgFacturasLabel">FACTURA SOPORTE</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="" alt="facturas" id="pdffactura" width="80%">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
{{!-- FIN MODAL SOPORTE FACTURAS --}}

{{!-- VER LISTAS DE PRODUCTOS --}}



<!-- Modal -->
<div class="modal fade" id="ListaProductos" tabindex="-1" aria-labelledby="ListaProductosLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ListaProductosLabel">LISTADO DE PRODUCTOS</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table">
    <thead>
      <tr>
        <th scope="col">Producto</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Costo</th>
        <th scope="col">Descuento</th>
        <th scope="col">Subtotal</th>
        <th scope="col">Iva</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody id="lproductos">
      
    </tbody>
  </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>