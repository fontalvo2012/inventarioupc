<div class="card">
    <div class="card-header">
        <h4>Crear Producto</h4>
    </div>
    <div class="card-body">
        <form action="/crearInsumosform" method="POST">
            <div class="row">
                <div class="col-sm-2"><span class="small">Codigo</span><input type="text" id="codigo" name="codigo"
                        class="form-control form-control-sm" placeholder="Codigo de Productos" required></div>
                <div class="col-sm-6"><span class="small">Nombres</span><input type="text" id="nombre" name="nombre"
                        class="form-control form-control-sm" placeholder="Nombre Producto" autocomplete="off" required>
                </div>
                <div class="col-sm-4"><span class="small">Descripcion</span><input type="text" id="referencia"
                        name="referencia" class="form-control form-control-sm" placeholder="Descripcion Producto."
                        required></div>
            </div>
            <div class="row">
                <div class="col-sm-4"><span class="small">Linea</span>
                <select name="linea" id="linea"  class="form-control form-control-sm" required>    
                    <option value="mecanico">Mecanico</option>
                    <option value="electrico">Electrico</option>
                    <option value="mecanico">Consumible</option>
                </select>
               </div>
                <div class="col-sm-4"><span class="small">Marca</span><input type="text" id="marca" name="marca"
                        class="form-control form-control-sm" placeholder="Marca Producto" required></div>
                <div class="col-sm-4"><span class="small">Unidad</span>
                          <select name="medida" id="medida"  class="form-control form-control-sm" required>    
                    <option value="Un">Unidad</option>
                    <option value="Kg">Kilogramos</option>
                    <option value="Lt">Litros</option>
                </select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3 mt-3">
                    <button class="btn btn-success btn-sm">Crear</button>
                </div>
            </div>
        </form>
    </div>
</div>