<form action="/proveedores" method="POST">
    <div class="card mb-3">
        <div class="card-header">
            <h5>Creacion de proveedores</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3"><span class="small"> <b>Nit/CC</b></span><input type="number" id="nit" name="nit"
                        class="form-control form-control-sm" placeholder="Nit/Cc" required></div>
                <div class="col-sm-6"><span class="small"> <b>R.social</b></span><input type="text" id="nombre"
                        name="nombre" class="form-control form-control-sm" placeholder="R. social" required autocomplete="offs"></div>
                <div class="col-sm-3"><span class="small"> <b>Direccion</b></span><input type="text" id="direccion"
                        name="direccion" class="form-control form-control-sm" placeholder="Direccion" required></div>

            </div>
            <div class="row">
                <div class="col-sm-6"><span class="small"> <b>Email</b></span><input type="email" id="email"
                        name="email" class="form-control form-control-sm" placeholder="Email" required></div>
                <div class="col-sm-3"><span class="small"> <b>Telefono</b></span><input type="text" id="telefono"
                        name="telefono" class="form-control form-control-sm" placeholder="Telefono" required></div>
            </div>
            <button class="btn btn-success btn-block mt-3  btn-sm">Crear</button>
        </div>
      
    </div>


</form>

  <table class="table dtable">
          <thead>
            <tr>
              <th>Nit</th>
              <th>Nombre</th>
              <th>Telefono</th>
              <th>Direccion</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody >
             {{#each proveedores}}
            <tr>
              <td>{{nit}}</td>
              <td>{{nombre}}</td>
              <td>{{telefono}}</td>
              <td>{{direccion}}</td>
              <td>{{email}}</td>
             
            </tr>
            {{/each}}
          </tbody>
        </table>