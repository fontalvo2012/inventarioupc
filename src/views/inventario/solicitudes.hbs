<form action="/solicitudes" method="POST">
    <div class="card">
        <div class="card-header">Solicitud de compra</div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4">
                    <span class="small">Producto</span>
                    <input type="text" id="producto" name="producto" placeholder="Producto" onblur="ValidarProducto()"
                        class="form-control form-control-sm productos">
                </div>
                <div class="col-sm-4">
                    <span class="small">Cantidad</span>
                    <input type="number" class="form-control form-control-sm" name="cantidad" id="cantidad"
                        placeholder="Cantidad">
                </div>
                <div class="col-sm-4 mt-4">
                    <button class="btn btn-warning btn-sm">Solicitar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">fecha</th>
            <th scope="col">Producto</th>
            <th scope="col">Cantidad</th>          
        </tr>
    </thead>
    <tbody>
        {{#each solicitudes}}
        <tr>
            <th scope="row">{{fecha}}</th>
            <td>{{productos}}</td>
            <td>{{cantidad}}</td>
            
        </tr>
        {{/each}}


    </tbody>
</table>